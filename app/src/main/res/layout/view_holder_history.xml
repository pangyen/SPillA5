<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_separator"
    android:layout_marginBottom="@dimen/standard_separator">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/history2" />

    <TextView
        android:id="@+id/tv_Htitle"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="This is a title" />

    <TextView
        android:id="@+id/tv_Hdes"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Htitle"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="Description" />

    <TextView
        android:id="@+id/tv_Hstart"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Hdes"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="Description" />
    <TextView
        android:id="@+id/tv_Hend"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Hstart"
        android:layout_toEndOf="@+id/iv_icon"
        android:layout_toRightOf="@+id/iv_icon"
        android:ellipsize="end"
        android:paddingEnd="@dimen/standard_separator"
        android:paddingStart="@dimen/standard_separator"
        android:text="Description" />

</RelativeLayout>